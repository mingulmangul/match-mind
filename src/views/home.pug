doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/styles.css")
        title Match Mind
    body.logged-out
        header 
            nav 
                ul 
                    li.logo MatchMind
                    li 
                        button.save-btn 화면저장
                    li 
                        button.logout 나가기
        div
        main
            div.notification.hidden
                p
            div.login-box
                form#loginForm
                    input(type="text" placeholder="What is your name?" required)
            div.game-container
                div.players
                    ul.player-list
                        - for (var i=0; i<8; i++)
                            li 
                                if i % 2 === 0
                                    div.player
                                        div.player__info
                                            div.player__nickname
                                                div Nick Name
                                                div.nickname
                                            div.player__grade
                                            div.player__score
                                                span 정답
                                                span.score
                                        div.player__avatar
                                        div.player__chat.hidden 
                                else 
                                    div.player.player--right
                                        div.player__avatar
                                        div.player__info
                                            div.player__nickname
                                                div Nick Name
                                                div.nickname
                                            div.player__grade
                                            div.player__score
                                                span 정답
                                                span.score
                                        div.player__chat.hidden 
                div.paint 
                    span PAINT BOARD
                    div.paint__canvas
                        div.paint__word.hidden
                            span 문제
                            span#word
                        canvas(width="800" height="480") 
                        div.results
                            p
                    div.paint__controls 
                        div
                            div
                                span COLOR
                                div.color.color--current
                            div.color-picker 
                            div.color.color--black(style="background-color: #031b29;") 
                            div.color.color--white(style="background-color: #f2f2eb;")
                        div.paint__buttons 
                            button#fillBtn 채우기
                            button#eraserBtn 전체지우기
                            button#giveupBtn 포기
                    div.paint__feature 
                        div 
                            div.timer 
                                div.timer__time 00:00
                                div 
                                    span POINTS
                                    div.timer__points 0
                        div 
                            form.chat-form
                                label(for="chat") CHATTING &sdot; &sdot;
                                input(type="text" id="chat" maxLength="50")       
        footer
        script.
            window.events = !{events}
        script(src="/socket.io/socket.io.js") 
        script(src="https://cdn.jsdelivr.net/npm/@jaames/iro@5") 
        script(src="/js/main.js") 